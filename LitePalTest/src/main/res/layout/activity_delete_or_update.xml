<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <!--更新-->
    <Button
        android:id="@+id/btn_update1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1更新数据"/>
    <Button
        android:id="@+id/btn_update2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2更新数据：更新多条记录"/>
    <Button
        android:id="@+id/btn_update3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3更新数据：更新多条记录"/>
    <Button
        android:id="@+id/btn_update4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4更新数据：更新多条记录"/>
    <Button
        android:id="@+id/btn_update5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5更新数据"/>
    <Button
        android:id="@+id/btn_update6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6更新数据：更新多条记录"/>
    <Button
        android:id="@+id/btn_update7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7更新数据：设置成默认值"/>
    <!--删除-->
    <Button
        android:id="@+id/btn_delete1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据：一条"/>
    <Button
        android:id="@+id/btn_delete2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据：多条"/>
    <Button
        android:id="@+id/btn_delete3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据：所有"/>
    <Button
        android:id="@+id/btn_delete4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据：判断对象是否存持久化，有就删除"/>
</LinearLayout>
