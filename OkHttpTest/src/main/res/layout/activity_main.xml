<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">


    <Button
        android:id="@+id/bt_get_obj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get User"/>

    <Button
        android:id="@+id/bt_get_objs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getUsers"
        android:text="Get Users"/>


    <Button
        android:id="@+id/bt_get_simple_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get SimpleString"/>


    <Button
        android:id="@+id/bt_get_html"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Html"/>

    <Button
        android:id="@+id/bt_get_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Image"/>

    <Button
        android:id="@+id/bt_upload_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File"/>

    <Button
        android:id="@+id/bt_download_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download File"/>
    <Button
        android:id="@+id/bt_toactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toActivity"
        />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>
